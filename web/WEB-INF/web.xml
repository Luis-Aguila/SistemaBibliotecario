<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IngresoLibros</servlet-name>
        <servlet-class>Controllers.IngresoLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoSolicitante</servlet-name>
        <servlet-class>Controllers.NuevoSolicitante</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IngresoLibrosController</servlet-name>
        <servlet-class>Controllers.IngresoLibrosController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NuevoSolicitanteController</servlet-name>
        <servlet-class>Controllers.NuevoSolicitanteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrestamoController</servlet-name>
        <servlet-class>Controllers.PrestamoController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IngresoLibros</servlet-name>
        <url-pattern>/ingresolibros.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoSolicitante</servlet-name>
        <url-pattern>/nuevosolicitante.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IngresoLibrosController</servlet-name>
        <url-pattern>/ingresolibrocontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NuevoSolicitanteController</servlet-name>
        <url-pattern>/nuevosolicitantecontroller.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrestamoController</servlet-name>
        <url-pattern>/prestamocontroller.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
